<style>
  header {
    background-color: #fff;
    border-bottom: 1px solid #e0e0e0;
    height: var(--header-height, 60px);
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .container {
    max-width: var(--page-max-width, 1100px);
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between; /* Logo left, nav-wrapper right */
    align-items: center;
    width: 100%;
  }

  /* Wrapper for right-aligned items */
  .nav-wrapper {
      display: flex;
      align-items: center;
      width: auto; /* Allow natural width */
  }

  /* Main navigation styles */
  .main-nav {
      width: 100%; /* Take full width of wrapper */
  }
  
  .main-nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      align-items: center; /* Ensure vertical alignment */
      flex-wrap: nowrap; /* Prevent wrapping on mobile */
      justify-content: flex-end; /* Push items to the right */
      width: 100%; /* Take full width */
  }

  .main-nav li {
      display: inline-block;
      white-space: nowrap; /* Prevent text wrapping */
  }

  .main-nav a {
      text-decoration: none;
      color: #555;
      font-size: 0.95rem;
      font-weight: 500;
      transition: color 0.2s ease;
      display: flex;
      align-items: center;
      padding: 0.5rem;
  }

  .main-nav a:hover,
  .main-nav a:focus {
      color: #2a2f6c;
  }

  /* GitHub repo display styles */
  .github-repo {
      display: flex;
      align-items: center;
      text-decoration: none;
      color: #333;
      padding: 4px;
      border-radius: 6px;
      transition: background-color 0.2s ease;
  }

  .github-repo:hover {
      background-color: rgba(0, 0, 0, 0.05);
  }

  .repo-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      color: #333;
  }

  /* Logo styles */
  .info-badge {
    display: inline-flex;
    align-items: center;
    padding: 8px 15px;
    background-color: #ffffff;
    border: 1px solid #ced4da;
    border-radius: 20px;
    gap: 8px;
    text-decoration: none;
    color: #212529;
    font-size: 1rem;
    transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    min-width: 0; /* Allow shrinking */
    overflow: hidden; /* Prevent overflow */
  }

  .info-badge:hover {
    background-color: #e9ecef;
    border-color: #e9ecef;
    cursor: pointer;
  }

  .badge-icon {
    height: 24px;
    width: auto;
    flex-shrink: 0; /* Prevent icon from shrinking */
  }

  .badge-text {
    line-height: 1;
    white-space: nowrap; /* Keep text on one line */
    overflow: hidden; /* Hide overflow */
    text-overflow: ellipsis; /* Add ellipsis if needed */
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .container {
      padding: 0 0.5rem;
    }
    
    .main-nav ul {
      gap: 0; /* Remove fixed gap on mobile */
      justify-content: space-between; /* Distribute items evenly */
    }
    
    .main-nav a {
      font-size: 0.85rem;
      padding: 0.25rem 0.35rem;
    }
    
    .info-badge {
      padding: 6px 10px;
      font-size: 0.9rem;
      max-width: 110px; /* Limit width on mobile */
    }
    
    .badge-icon {
      height: 20px;
    }
    
    .github-repo {
      padding: 2px;
    }
    
    .repo-icon svg {
      height: 20px;
      width: 20px;
    }
  }

  /* Very small screens */
  @media (max-width: 480px) {
    .info-badge {
      padding: 4px 6px;
      max-width: 40px; /* Make very compact */
      justify-content: center;
    }
    
    .badge-text {
      display: none; /* Hide text on very small screens */
    }
    
    .badge-icon {
      height: 24px; /* Make icon slightly larger for better visibility */
    }
    
    .main-nav a {
      font-size: 0.8rem;
      padding: 0.25rem;
    }
  }
</style>